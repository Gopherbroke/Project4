<h1>Here are your pieces</h1>



<% @pieces.each do |piece| %>
<div class="spanB">

  <div id="slider"class="carousel slide">

    <div class="carousel-inner">
      <img title="<%= link_to piece.name, piece_path(piece) %>" src="<%= piece.image_url %>">
    </div>
    <div class="item">
      <img alt="Art but smaller" title="<%= piece.name %>" src="<%= piece.image_url %>">
    </div>
  </div>

  <a class="left carousel-control" href="#slider" data-slide="prev">&lsaquo;</a>
  <a class="right carousel-control" href="#slider" data-slide="next">&rsaquo;</a>
</div>
<% end %>
