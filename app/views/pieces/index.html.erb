<h1>Here are your pieces</h1>





<div class="span8">
  <div id="slider" class="carousel slide">
    <div class="carousel-inner">
      <div class="item active">
          <% @pieces.each do |piece| %>
        <img class="active" title="<%= piece.name %>" src="<%= piece.image_url %>">
        <did class="carousel-caption">
          <h4> <%= piece.name %> </h4>
          <p> <%= piece.description %> </p>
      </div>
    </div>

    <div class="item">
      <img src="<%= piece.image_url %>">
    </div>
  <a class="left carousel-control" href="#slider" data-slide="prev">&lsaquo;</a>
  <a class="right carousel-control" href="#slider" data-slide="next">&rsaquo;</a>
  </div>
</div>

<% end %>
