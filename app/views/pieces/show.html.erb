<h1>Piece Show</h1>

<%= @piece.name %>
<%= @piece.description %>
<%= link_to 'Home', pieces_path %>


<br>
<br>
<%= form_for ([@piece, @piece.comments.build]) do |f| %>


  <article>
    <h3>Leave A Comment</h3>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </article>

  <article>
    <%= f.submit %>
  </article>

  <% end %>

  <p>
    <% @piece.comments.each do |comment| %>
    <strong>Body:</strong>
    <%= comment.body %>
  </p>
  <p>
    <%= link_to 'Edit', edit_piece_comment_path([@piece, comment]) %>
    <%= link_to 'Destroy Comment', [@piece, comment],
                method: :delete,
                data: { confirm: 'Are you sure?'} %>
<% end %>
  </p>
